<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <strong>Name:</strong>
        <%= @user.name %>
      </h1>
      <p></p>
      <h1>
        <strong>Email:</strong>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
</div>
<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
